---
import Stack from "../common/Stack.astro";
import Avatar from "./Avatar.astro";
import CoffeeText from "./CoffeeText.astro";
import CurrentRole from "./CurrentRole.astro";
import Friends from "./Friends.astro";
import HiText from "./HiText.astro";
import IAm from "./IAm.astro";
import Socials from "./Socials.astro";
---

<article>
  <Stack direction="column" alignItems="center" spacing={10}>
    <Stack
      direction="row"
      alignItems="center"
      justifyContent="center"
      spacing={2}
      className="header"
    >
      <Stack
        direction="column"
        alignItems="flex-start"
        spacing={1}
        className="text-container"
      >
        <HiText />
        <IAm />
        <CurrentRole />
      </Stack>
      <div class="avatar-container">
        <Avatar />
      </div>
    </Stack>

    <Friends />

    <Stack direction="column" alignItems="center" spacing={2}>
      <CoffeeText />
      <Socials />
    </Stack>
  </Stack>
</article>

<style>
  article {
    width: 100%;
  }

  @media (max-width: 760px) {
    :global(.header.stack) {
      flex-direction: column;
    }

    :global(.header.stack) :global(.text-container.stack) {
      order: 2;
    }

    :global(.header.stack) .avatar-container {
      order: 1;
    }
  }
</style>
